
STREAMLIT APP

#import packages
import pandas as pd 
import streamlit as st

#title of the app
st.title("TWITTER SCRAPING!")
#insert csv file
uploaded_file=st.file_uploader('choose a csv file',type='csv')
if uploaded_file:
  st.markdown('---')
  df=pd.read_csv(uploaded_file)
  st.dataframe(df)

                     

#searching data in database
@st.cache
def get_data():
    return pd.read_csv('twitter_scraping.csv')
df = get_data()

#enter word to serach from date to To date with maxTweet 
 text = st.text_input("Enter Word to Search")
if text:
        From = st.date_input("From Date")
        if From:
            To = st.date_input("To Date")
            if To:
                maxTweets = st.number_input("Number of Tweets",0)
                if maxTweets:

#submit and get data
submit=st.button('submit')
if submit:
   df[df['Text'] == text]  

#download csv file
@st.cache
def convert_df(df):
    
    return df.to_csv().encode('utf-8')

csv = convert_df(df)

st.download_button(
    label="Download data as CSV",
    data=csv,
    file_name='twitter_scraping.csv',
    mime='text/csv',
)
